<h3>
  Order summary
  <small>
    <%= link_to 'Edit', cart_path %>
  </small>
</h3>

<table class='zebra-striped'>
  <% current_order.line_items.each do |line_item| %>
    <tr>
      <td>
        <%= truncate(line_item.product.title, length: 75) %>
      </td>
      <td>
        <%= image_tag(line_item.product.picture.picture_url(:pico)) %>
        <br />
        <%= line_item.quantity %> for
        <br />
        <strong>
          <%= number_to_currency(line_item.product.price) %>
        </strong>
      </td>
    </tr>
  <% end %>
  <% if current_order.shipping_method %>
    <tr> <td>Shipping</td> <td> <%= number_to_currency(current_order.shipping_method.shipping_cost) %> </td></tr>
  <% end %>
  <tr>
    <td>
      <h4>Total</h4>
    </td>
    <td>
      <h4>
        <%= number_to_currency(current_order.price_with_shipping) %>
      </h4>
    </td>
  </tr>
</table>

<% if %W(creditcard_payments shipping_methods).include? params[:controller] %>
  <div class='row'>
    <div class='span4' style='min-height:150px;'>
      <h3>
        Shipping address
        <small>
          <%= link_to 'Edit', edit_order_path(current_order) %>
        </small>
      </h3>
      <address>
        <%= current_order.shipping_address.full_address_array.join('<br />').html_safe %>
      </address>
      <h3>Contact email</h3>
      <address>
        <%= current_order.email %>
      </address>
    </div>
  </div>
<% end %>

<% if current_order.shipping_method %>
  <div class='row'>
    <div class='span4'>
      <h3>
        Shipping method
        <small>
          <%= link_to 'Edit', edit_shipping_method_order_path(current_order) %>
        </small>
      </h3>
      <address>
        <%= current_order.shipping_method.name %> <br />
        <%= number_to_currency(current_order.shipping_method.shipping_price) %>
      </address>
    </div>
  </div>
<% end %>
