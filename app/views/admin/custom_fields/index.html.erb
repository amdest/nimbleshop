<div>
  <h1><%= t(:custom_fields) %></h1>
</div>

<%= link_to(new_admin_custom_field_path) do %>
  <button class="btn info">+ <%= t(:add_new_custom_field) %></button>
<% end %>

<br />
<br />

<table class="zebra-striped">
  <tbody>
    <% @custom_fields.each do |custom_field| %>
      <tr>
        <td><%= custom_field.name %></td>
        <td><%= custom_field.field_type %></td>
        <td>
          <%= link_to t(:edit), edit_admin_custom_field_path(custom_field) %>
          |
          <%= link_to t(:delete), [:admin, custom_field], confirm: t(:delete_confirmation_for_custom_field), method: 'delete' %>
        </td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

