<div class='well'>
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan='3'>
          <h3><%= link_group.name %></h3>
          <%= link_to 'Add new link', '' %>
          |
          <%= link_to t(:edit), edit_admin_link_group_path(link_group) %>
          |
          <%= link_to t(:delete),
                      [:admin, link_group],
                      confirm: t(:delete_confirmation_for_link_group), method: 'delete', remote: true %>
        </th>
      </tr>
      <tr>
        <th>Link name </th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% link_group.navigations.each do |nav| %>
        <tr>
          <td> <%= nav.navigeable.name %> </td>
          <td>
          </td>
          <td>
            <%= link_to t(:delete),
                    [:admin, link_group],
                    confirm: t(:delete_confirmation_for_link_group),
                    method: 'delete' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
