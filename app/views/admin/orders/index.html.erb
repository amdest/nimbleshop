<div>
  <h1><%= t(:orders) %></h1>
</div>

<table class="zebra-striped">
  <thead>
    <tr>
      <th>Order number</th>
      <th>Amount</th>
      <th>Payment Status</th>
      <th>Ordered at</th>
      <th>Shipped at</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td> <%= link_to order.number, admin_order_path(order) %> </td>
        <td> <%= number_to_currency(order.grand_total) %> </td>
        <td><%= display_payment_status(order) %></td>
        <td><%= order.created_at.to_s(:long) %></td>
        <td><%= display_shipping_status(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
