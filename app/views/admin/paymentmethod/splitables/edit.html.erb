<div class='well'>
  <div>
    <div style='float:left;'>
      <%= image_tag('splitable_logo.png', width: 130) %>
    </div>
    <div style='clear:both;'></div>
  </div>

  <%= form_tag('/admin/paymentmethod/splitable', method: :put, class: 'form-horizontal') do %>
    <fieldset>
      <%= render '/admin/paymentmethod/edit_attributes' %>
    </fieldset>
    <div class="form-actions">
      <%= submit_tag('Submit', class: 'btn btn-primary') %>
      &nbsp;
      <%= link_to t(:cancel), admin_paymentmethod_splitable_path, class: 'btn' %>
    </div>
  <% end %>

</div>
