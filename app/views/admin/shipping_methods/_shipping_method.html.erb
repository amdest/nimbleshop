<tr>
  <td> 
    <%= shipping_method.shipping_zone.name %> 
  </td>
  <td> 
    <%= shipping_method_condition_in_english(shipping_method.parent) %> </td>
  <td> 
    <%= link_to "+", update_offset_admin_regional_shipping_zone_shipping_method_path(:regional_shipping_zone_id => shipping_method.shipping_zone, :id => shipping_method.id, :offset => 0.10), method: :put, remote: true, class: 'update-offset'  %>
    <%= number_to_currency(shipping_method.parent.base_price) %> 
    (<span class="offset"><%= number_to_currency(shipping_method.offset.to_f) %></span>)
    <%= link_to "-", update_offset_admin_regional_shipping_zone_shipping_method_path(:regional_shipping_zone_id => shipping_method.shipping_zone, :id => shipping_method.id, :offset => -0.10), method: :put, remote: true, class: 'update-offset'  %>
  </td>
  <td>
    <%= link_to 'disable', admin_shipping_zone_shipping_method_path(shipping_method.shipping_zone, shipping_method), confirm: t(:delete_confirmation_for_shipping_method), method: 'delete', remote: true %>
  </td>
</tr>
