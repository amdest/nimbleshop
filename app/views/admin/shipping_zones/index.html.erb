<div>
  <h1>Shipping</h1>
</div>

<%= link_to(new_admin_shipping_zone_path) do %>
  <button class="btn info">+ Add new shipping zone</button>
<% end %>

<br />
<br />

<% @shipping_zones.each do |shipping_zone| %>
  <table class="zebra-striped">
    <tbody>
      <tr>
        <td colspan='3'><%= shipping_zone.name %></td>
      </tr>
      <% shipping_zone.shipping_methods.each do |shipping_method| %>
        <tr>
          <td> <%= shipping_method.name %> </td>
          <td> <%= shipping_method_condition_in_english(shipping_method) %> </td>
          <td>
            <%= link_to t(:edit), edit_admin_link_group_path(shipping_method) %>
            |
            <%= link_to t(:delete), [:admin, shipping_method], confirm: 'Are you sure?', method: 'delete' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
