<div>
  <h1>Shop configuration</h1>
</div>

<%= form_for([:admin, @shop]) do |f| %>

  <% if @shop.errors.any? %>
    <div class="alert-message block-message error">
      <p> <%= t(:error_bang) %> </p>
      <ul>
        <% @shop.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name, class: 'xlarge', size: 30 %>
      </div>
    </div><!-- /clearfix -->

    <div class="clearfix">
      <%= f.label :theme %>
      <div class="input">
        <%= f.text_field :theme, class: 'xlarge', size: 30 %>
      </div>
    </div><!-- /clearfix -->

    <div class="clearfix">
      <%= f.label :time_zone %>
      <div class="input">
        <%= f.collection_select :time_zone, ActiveSupport::TimeZone.all, :name, :to_s %>
      </div>
    </div><!-- /clearfix -->

    <div class="clearfix">
      <%= f.label :twitter_handle %>
      <div class="input">
        <%= f.text_field :twitter_handle, class: 'xlarge', size: 30 %>
      </div>
    </div><!-- /clearfix -->

    <div class="clearfix">
      <%= f.label :facebook_url %>
      <div class="input">
        <%= f.text_field :facebook_url, class: 'xlarge', size: 30 %>
      </div>
    </div><!-- /clearfix -->

    <div class="clearfix">
      <%= f.label :contact_email %>
      <%= link_to ' ! ', '#', :class => 'help' %>
      <div class="input">
        <%= f.text_field :contact_email, class: 'xlarge', size: 30 %>
      </div>
    </div><!-- /clearfix -->

    <div class="clearfix">
      <%= f.label :intercept_email %>
      <%= link_to ' ! ', '#', :class => 'help' %>
      <div class="input">
        <%= f.text_field :intercept_email, class: 'xlarge', size: 30 %>
      </div>
    </div><!-- /clearfix -->

    <div class="clearfix">
      <%= f.label :from_email %>
      <%= link_to ' ! ', '#', :class => 'help' %>
      <div class="input">
        <%= f.text_field :from_email, class: 'xlarge', size: 30 %>
      </div>
    </div><!-- /clearfix -->

    <div class="clearfix">
      <%= f.label :default_creditcard_action %>
      <%= link_to ' ! ', '#', :class => 'help' %>
      <div class="input">
        <%= f.text_field :default_creditcard_action, class: 'xlarge', size: 30 %>
      </div>
    </div><!-- /clearfix -->



  </fieldset>

  <div class="actions">
    <%= f.submit('Submit', class: 'btn primary') %>
    &nbsp;
    <%= link_to 'Cancel', edit_admin_shop_path, class: 'btn' %>
  </div>

<% end %>

