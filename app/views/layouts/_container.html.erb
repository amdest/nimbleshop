<div class="container">
  <div class="row">

    <div class="span3">
      <%= render 'layouts/admin_sidebar' %>
    </div>

    <div class="span9">
      <div class="row">
        <div class="span12">
          <% if flash[:notice] %>
            <div class='alert alert-success'>
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:error] %>
            <div class='alert alert-error'>
              <%= flash[:error] %>
            </div>
          <% end %>
          <p>
            <%= yield %>
          </p>
      </div>
      </div>
    </div>
  </div>

  <hr />

  <%= render '/layouts/admin_footer' %>

</div>
