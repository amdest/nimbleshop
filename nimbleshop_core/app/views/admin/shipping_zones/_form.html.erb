<div class='well'>
  <%= form_for([:admin, @shipping_zone], html: {class: 'form-horizontal'}) do |f| %>

    <% if @shipping_zone.errors.any? %>
      <div class="alert alert-error">
        <p> <%= t(:error_bang) %> </p>
        <ul>
          <% @shipping_zone.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
      <div class="control-group">
        <%= f.label :country_code, "Country name", class: 'control-label' %>
        <div class="controls">
          <%= f.select :country_code, Nimbleshop::Util.unconfigured_shipping_zone_countries, class: 'xlarge focus', size: 30 %>
        </div>
      </div>
    </fieldset>

    <div class="form-actions">
      <%= f.submit 'Submit', class: 'btn btn-primary', 'data-loading-text' => 'processing ...' %>
      &nbsp;
      <%= link_to 'Cancel', admin_shipping_zones_path, class: 'btn' %>
    </div>

  <% end %>
</div>
