<div class='span7'>
  <%= form_for(@current_order, html: {class: 'form-horizontal'}) do |f| %>
    <%= render 'error', f: f %>
    <%= render 'contact_information', f: f %>
    <%= render 'shipping_address',    f: f %>
    <%= render 'billing_address',     f: f %>
    <div class="form-actions">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<%= render 'layouts/order_summary' %>
