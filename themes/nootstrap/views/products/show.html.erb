<br />
<div class='row'>

  <div class='span6'>
    <ul class="thumbnails">
      <li>
        <%= link_to(image_tag(@product.picture.picture_url(:large), alt: @product.name), all_pictures_product_path(@product), id: 'main-image', class: 'thumbnail') %>
      </li>
    </ul>

    <br />
    <table id='product-thumbnails'>
      <% @product.pictures.in_groups_of(5) do |group| %>
        <tr>
          <% group.each do |picture| %>
            <td>
              <% if picture.blank? %>
                &nbsp;
              <% else %>
              <% img = image_tag picture.picture_url(:small), alt: @product.name, class: 'thumb',
                                                           'data-large-picture' => picture.picture_url(:large),
                                                           'data-grande-picture' => picture.picture_url(:large_plus) %>
              <%= link_to(img, '#', class: 'thumbnail') %>
            <% end %>

            </td>
          <% end %>
        </tr>
      <% end %>
    </table>

    <%= link_to 'Continue shopping ...', root_url %>
  </div>

  <div class='span6'>
    <h2 id='product-price'><%= number_to_currency(@product.price) %></h2>
    <%= form_tag('/cart/add', method: 'post') do %>

      <div id ="product-show-variant-price-data" data-fields="<%= @product.variant_price_data.to_json %>">

        <% if @product.variations.active.any? %>
      <div class='variants'>
        <% @product.variations.active.each do |variation| %>
          <%= variation.label %>
          <%= select_tag( "#{variation.variation_type}_value", options_for_select(variation.content_for_select_options)) %>
          <br />
          <br />
        <% end %>
        <br />
        <br />
      </div>
    <% end %>

      <input type="hidden" name="permalink" value="<%= @product.permalink %>" />
      <div id="buy" class="clear">
        <%= submit_tag 'Add to cart', class: 'btn btn-primary', id: 'add-to-cart' %>
			</div>
    <% end %>

    <h4 id='product-description'>Description</h4>
    <div id='product-description-content'>
      <%= simple_format(@product.description) %>
    </div>
  </div>
</div>

