<label class='radio'>
  <%= radio_button_tag 'payment_choice', 'authorize-net', true %>
  <label for='payment_choice'>
    <%= image_tag('visa.png') %>
    <%= image_tag('mastercard.png') %>
    <%= image_tag('amex.png') %>
    <%= image_tag('discover.png') %>
  </label>
</label>


<div class='nimbleshop_authorizedotnet_umbrella'>
<% if @creditcard.errors.any? %>
  <div class="alert alert-error">
    <ul>
      <% @creditcard.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<fieldset>
  <div class='control-group'>
    <%= f.label :number, 'Credit card number', autocomplete: 'off', class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :number, class: 'input-xlarge focus' %>
      &nbsp;
      <%= link_to 'Help', '#authorizenetsandboxhelp', 'data-toggle' => "modal" %>
    </div>
  </div>

  <div class='control-group'>
    <%= f.label :cvv, 'CVV number', autocomplete: 'off', class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :cvv %>
      &nbsp;
      <%= link_to 'What is this?', '#cvvhelp', 'data-toggle' => "modal" %>
    </div>
  </div>

  <div class='control-group'>
    <%= f.label :expires_on, 'Expiration date', class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :month,  size: 2 %>/<%= f.text_field :year,   size: 4 %>
    </div>
  </div>
</fieldset>
</div>

<div class="form-actions">
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
</div>

<%= render '/nimbleshop_authorizedotnet/authorizedotnets/authorize_net_instructions' %>
<%= render '/nimbleshop_authorizedotnet/authorizedotnets/what_is_cvv' %>
