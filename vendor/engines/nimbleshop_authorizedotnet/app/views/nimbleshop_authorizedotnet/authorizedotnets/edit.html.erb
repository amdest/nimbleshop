<div class='well'>

  <% if @payment_method.errors.any? %>
    <div class="alert alert-error">
      <p> <%= t(:error_bang) %> </p>
      <ul>
        <% @payment_method.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div style='float:left;'>
      <%= image_tag('authorize_net_logo.png') %>
    </div>
    <div style='clear:both;'></div>
  </div>

  <br />

  <%= form_for @payment_method, url: authorizedotnet_path, html: { class: 'form-horizontal' } do |f| %>
    <fieldset>
      <div class="control-group">
        <%= f.label :login_id, nil, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :login_id, class: 'span6' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :transaction_key, nil, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :transaction_key, class: 'span6' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :company_name_on_creditcard_statement, nil, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :company_name_on_creditcard_statement, class: 'span6' %>
        </div>
      </div>
    </fieldset>

    <div class="form-actions">
      <%= f.submit('Submit', class: 'btn btn-primary') %>
      &nbsp;
      <%= link_to t(:cancel), nimbleshop_authorizedotnet.authorizedotnet_path, class: 'btn' %>
    </div>
  <% end %>

</div>
