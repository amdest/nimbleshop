<div class='well'>

  <% if @payment_method.errors.any? %>
    <div class="alert alert-error">
      <p> <%= t(:error_bang) %> </p>
      <ul>
        <% @payment_method.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div style='float:left;'>
      <%= image_tag('authorize_net_logo.png') %>
    </div>
    <div style='clear:both;'></div>
  </div>

  <br />

  <%= form_for @payment_method, url: authorizedotnet_path, html: { class: 'form-horizontal' } do |f| %>
    <fieldset>
      <div class="control-group">
        <%= label_tag :login_id, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :login_id, @payment_method.login_id, class: 'span6' %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :transaction_key, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :transaction_key, @payment_method.transaction_key, class: 'span6' %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :company_name_on_creditcard_statement, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :company_name_on_creditcard_statement, @payment_method.company_name_on_creditcard_statement, class: 'span6' %>
        </div>
      </div>
    </fieldset>

    <div class="form-actions">
      <%= submit_tag('Submit', class: 'btn btn-primary') %>
      &nbsp;
      <%= link_to t(:cancel), nimbleshop_authorizedotnet.authorizedotnet_path, class: 'btn' %>
    </div>
  <% end %>

</div>
