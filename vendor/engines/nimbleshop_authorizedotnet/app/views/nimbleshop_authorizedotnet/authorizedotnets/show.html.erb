<div class='well'>
  <div>
    <div style='float:left;'>
      <%= image_tag('authorize_net_logo.png') %>
    </div>
    <div style='float:left;margin-top:25px;margin-left: 10px;'>
      <h3>
        <%= link_to 'Edit Configuration Info', edit_authorizedotnet_path(@payment_method) %>
      </h3>
    </div>
    <div style='clear:both;'></div>
  </div>

  <table class="table table-striped">
    <tr>
      <td> Login id : </td>
      <td> <%= @payment_method.login_id %> </td>
    </tr>
    <tr>
      <td> Transaction key : </td>
      <td> <%= @payment_method.transaction_key %> </td>
    </tr>
    <tr>
      <td> Company name on credit card statement : </td>
      <td> <%= @payment_method.company_name_on_creditcard_statement %> </td>
    </tr>
    <tr>
      <td> Use SSL : </td>
      <td> <%= @payment_method.use_ssl == 'true' ? 'true' : 'false' %> </td>
    </tr>
  </table>

</div>
