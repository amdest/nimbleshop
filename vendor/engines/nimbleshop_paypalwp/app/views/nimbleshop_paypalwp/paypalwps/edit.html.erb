<div class='well'>

  <% if @payment_method.errors.any? %>
    <div class="alert alert-error">
      <p> <%= t(:error_bang) %> </p>
      <ul>
        <% @payment_method.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div style='float:left;'>
      <%= image_tag('paypal_logo.png', width: 140) %>
    </div>
    <div style='clear:both;'></div>
  </div>

  <%= form_for @payment_method, url: paypalwp_path, html: {class: 'form-horizontal'} do |f| %>
    <fieldset>
      <div class="control-group">
        <%= label_tag :merchant_email, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :merchant_email, @payment_method.merchant_email, class: 'span6' %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :paymentaction, 'Default payment action', class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :paymentaction, @payment_method.paymentaction, class: 'span6' %>
        </div>
      </div>
    </fieldset>
    <div class="form-actions">
      <%= submit_tag('Submit', class: 'btn btn-primary') %>
      &nbsp;
      <%= link_to t(:cancel), nimbleshop_paypalwp.paypalwp_path, class: 'btn' %>
    </div>
  <% end %>

</div>
