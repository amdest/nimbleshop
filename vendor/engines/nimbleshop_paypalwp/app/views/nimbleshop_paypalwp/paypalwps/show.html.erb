<div class='well'>
  <div>
    <div style='float:left;'>
      <%= image_tag('paypal_logo.png', width: 140) %>
    </div>
    <div style='float:left;margin-top:25px;margin-left: 10px;'>
      <h3>
        <%= link_to 'Edit Configuration Info', edit_paypalwp_path(@payment_method) %>
      </h3>
    </div>
    <div style='clear:both;'></div>
  </div>

  <table class="table table-striped">
    <tr>
      <td> Merchant email: </td>
      <td> <%= @payment_method.merchant_email %> </td>
    </tr>
    <tr>
      <td> Default payment action: </td>
      <td> <%= @payment_method.paymentaction %> </td>
    </tr>
  </table>
</div>
