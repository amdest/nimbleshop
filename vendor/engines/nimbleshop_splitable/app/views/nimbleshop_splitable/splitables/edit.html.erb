<div class='well'>

  <% if @payment_method.errors.any? %>
    <div class="alert alert-error">
      <p> <%= t(:error_bang) %> </p>
      <ul>
        <% @payment_method.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div style='float:left;'>
      <%= image_tag('splitable_logo.png') %>
    </div>
    <div style='clear:both;'></div>
  </div>

  <br/>

  <%= form_tag('/admin/payment_methods/nimbleshop_splitable/splitable', method: :put, class: 'form-horizontal') do %>
    <fieldset>

      <div class="control-group">
        <%= label_tag :api_key, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :api_key, @payment_method.api_key, class: 'span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :api_secret, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :api_secret, @payment_method.api_secret, class: 'span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :submission_url, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :submission_url, @payment_method.submission_url, class: 'span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :expires_in, nil, class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :expires_in, @payment_method.expires_in, class: 'span6' %>
        </div>
      </div>

    </fieldset>

    <div class="form-actions">
      <%= submit_tag('Submit', class: 'btn btn-primary') %>
      &nbsp;
      <%= link_to t(:cancel), nimbleshop_splitable.splitable_path, class: 'btn' %>
    </div>
  <% end %>

</div>
