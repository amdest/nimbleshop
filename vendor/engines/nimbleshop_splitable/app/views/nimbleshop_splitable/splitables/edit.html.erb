<div class='well'>

  <% if @payment_method.errors.any? %>
    <div class="alert alert-error">
      <p> <%= t(:error_bang) %> </p>
      <ul>
        <% @payment_method.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div style='float:left;'>
      <%= image_tag('splitable_logo.png') %>
    </div>
    <div style='clear:both;'></div>
  </div>

  <br/>

  <%= form_for @payment_method, url: splitable_path, html: {class: 'form-horizontal'} do |f| %>
    <fieldset>
      <div class="control-group">
        <%= f.label :api_key, nil, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :api_key, class: 'span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :api_secret, nil, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :api_secret, class: 'span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :submission_url, nil, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :submission_url, class: 'span6' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :expires_in, nil, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :expires_in, class: 'span6' %>
        </div>
      </div>

    </fieldset>

    <div class="form-actions">
      <%= f.submit('Submit', class: 'btn btn-primary') %>
      &nbsp;
      <%= link_to t(:cancel), nimbleshop_splitable.splitable_path, class: 'btn' %>
    </div>
  <% end %>

</div>
