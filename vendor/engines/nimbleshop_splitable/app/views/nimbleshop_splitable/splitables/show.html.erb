<div class='well'>
  <div>
    <div style='float:left;'>
      <%= image_tag('splitable_logo.png', width: 140) %>
    </div>
    <div style='float:left;margin-top:25px;margin-left: 10px;'>
      <h3>
        <%= link_to 'Edit Configuration Info', edit_splitable_path %>
      </h3>
    </div>
    <div style='clear:both;'></div>
  </div>

  <table class="table table-striped">
    <tr>
      <td> Api key : </td>
      <td> <%= @payment_method.api_key %> </td>
    </tr>
    <tr>
      <td> Api secret: </td>
      <td> <%= @payment_method.api_secret %> </td>
    </tr>
    <tr>
      <td> Submission url: </td>
      <td> <%= @payment_method.submission_url %> </td>
    </tr>
    <tr>
      <td> Expires in: </td>
      <td> <%= @payment_method.expires_in %> </td>
    </tr>
  </table>
</div>
